//Array -Linear Search
//Author:P.S.Narayanan
//Date:12/10/2014


#include<stdio.h>
int main()
{
	int a[50],elem,n,i;
   printf("Enter the total no of elements\n");
   scanf("%d",&n);
   printf("Enter %d elements\n",n);
   for (i=0;i<n;i++)
	   scanf("%d",&a[i]);
   printf("Enter integer search key\n");
   scanf("%d",&elem);
   for(i=0;i<n;i++)
   {
   	if(a[i]==elem)
      	printf("This value is found in element %d\n",i+1);

      if(a[i]==n&&a[i]!=elem)
      	printf("Value not found.\n");
    }

	return 0;
}
